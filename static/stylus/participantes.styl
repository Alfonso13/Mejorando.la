.wrap_p
    background white
    min-height 224px
    margin 0 auto
    padding 50px 30px
    max-width 660px
    font-size 0px
    text-align center
#participantes
	background white url("../images/post/pattern_participantes_post.png")
	min-height 314px
	margin 0 auto
	position relative
	max-width 1000px

	h4
		background: #04b83b
		color: white
		display: block
		font-size: 20px
		font-weight: bold
		margin-bottom: 10px
		padding: 10px
		text-transform: uppercase
		max-width: 490px

	br
		@extends .hidden

	img
		display inline
		vertical-align bottom

	.img_p
		display inline-block
		position relative
		vertical-align top

		&:hover a
			display block

	a
		position relative
		text-decoration: none

		&:hover span
			left: 15px
			margin-top 5px
			opacity 1
			top: -50px
			

	span
		background: #3298fd url("../images/post/pattern_btn_post.png")
		border: 2px solid #3298fd
		color: white
		font-size 16px
		font-weight: bold
		height: 20px
		left -9999px
		opacity 0
		padding: 10px
		position: absolute
		top -9999px
		transition()
		transition-property margin, opacity

		&:hover
			text-decoration: underline

		&:after
			border-left: 5px solid #3298fd
			border-bottom: 5px solid transparent
			border-top: 5px solid #3298fd
			border-right: 5px solid transparent
			content: ""
			display: block
			width: 0
			position: relative
			top: 12px
			left: -12px



