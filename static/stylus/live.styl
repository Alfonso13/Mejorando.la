// webfonts
@css {
@font-face {
	font-family: 'open sans';
	src: url("../fonts/opensans-light-webfont.eot");
	src: url("../fonts/opensans-light-webfont.eot?#iefix") format('embedded-opentype'), url("../fonts/opensans-light-webfont.woff") format('woff'), url("../fonts/opensans-light-webfont.ttf") format('truetype'), url("../fonts/opensans-light-webfont.svg#OpenSansLight") format('svg');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'open sans';
	src: url("../fonts/opensans-bold-webfont.eot");
	src: url("../fonts/opensans-bold-webfont.eot?#iefix") format('embedded-opentype'), url("../fonts/opensans-bold-webfont.woff") format('woff'), url("../fonts/opensans-bold-webfont.ttf") format('truetype'), url("../fonts/opensans-bold-webfont.svg#OpenSansBold") format('svg');
	font-weight: bold;
	font-style: normal;
}
}


// nib framework + custom mixins & classes
@import "classes.styl"


// variables
font_opensans = 'open sans', sans-serif


// global tags
body
	background #fff url("../images/live/cinta_1920.jpg") repeat-y fixed
	font-family font_opensans
	margin 0
	padding 0

footer
	bottom 0
	color #3D4043
	left 0
	position absolute
	width 100%

	.izquierda
		@extends .clearfix
		background url("../images/live/footer.png") no-repeat right top
		height 68px
		left 0
		position absolute
		text-transform uppercase
		top 0
		width 280px

		span
			display block

			&:first-child
				font-size 20px
				letter-spacing -1px

				+ span
					font-size 12px
					font-weight bold

		.text
			padding 15px 0 0 35px

	.derecha
		box-sizing border-box
		font-size 25px
		font-weight bold
		padding-left 280px
		line-height 68px
		text-align center
		width 100%
		max-width 1280px

		&
		a
			color #fff

		a
		span
			margin 0 3%

header
	border-top 7px solid #fff
	// margin-bottom 25px
	position relative
	width auto

	&:before
		background url("../images/logos/adorno-logo.png") no-repeat 65% 0
		content " "
		height 35px
		left 50% + 10
		margin-left 103px
		position absolute
		width 31px

	h1
		margin 0

	img
		vertical-align bottom

html
	margin 0

input.text-field
	background #003e73
	border 1px solid #409fd6
	border-left 0
	color #fff
	float left
	font 13px/30px font_opensans
	height 30px
	margin 0
	padding 0 5px
	position absolute
	right 0
	top 0

	&:focus
		outline 0

// classnames
.btn_facebook iframe
	width 44px !important


// ids
